<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <com.google.android.material.textfield.TextInputLayout

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/str_height"

        app:boxBackgroundColor="#f5f5f5"
        app:endIconDrawable="@drawable/baseline_favorite_border_24"
        app:startIconDrawable="@drawable/baseline_favorite_border_24"
        app:startIconTint="@color/purple_200">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/heightEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="50dp"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/str_weight"
        app:boxBackgroundColor="#f5f5f5"
        app:endIconDrawable="@drawable/baseline_favorite_border_24"
        app:startIconDrawable="@drawable/ic_baseline_follow_the_signs_24"
        app:startIconTint="@color/purple_200">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/weightEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/isOk"
        android:layout_marginTop="50dp"
        android:text="@string/str_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>